# vim: filetype=i3config

include controls.conf

set $mod Mod4
exec_always "setxkbmap -layout br,pt"

set $term --no-startup-id $TERMINAL

#################################
#			AUTOSTART			#
#################################

exec_always --no-startup-id dex --autostart --environment i3
exec_always --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
exec_always $SCRIPTS_DIR/startup

#################################
#			KEYBINDS			#
#################################

# reload configuration
bindsym $mod+Shift+c reload
# restart i3 inplace
bindsym $mod+Shift+r restart
# exit i3
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# --- Applications
bindsym $mod+Return exec $term
bindsym $mod+w		exec $BROWSER

bindsym $mod+d			exec $SCRIPTS_DIR/rofi_launcher
bindsym $mod+Escape		exec $SCRIPTS_DIR/rofi_powermenu
bindsym $mod+n			exec $SCRIPTS_DIR/dmenu_baseconverter
bindsym $mod+Shift+v	exec $SCRIPTS_DIR/dmenu_cliphist sel
bindsym Ctrl+x			exec $SCRIPTS_DIR/dmenu_cliphist add

# Screenshot
bindsym Print		exec xfce4-screenshooter -r
bindsym Shift+Print exec xfce4-screenshooter -f
bindsym $mod+Print	exec xfce4-screenshooter

# --- Volume
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMicMute	 exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status
bindsym XF86AudioMute		 exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status

# --- Media
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl prev


#################################
#			LOOKS				#
#################################

font pango: Pragmasevka Nerd Font 8
gaps inner 5
gaps outer 5
for_window [class="^.*"] border pixel 0
