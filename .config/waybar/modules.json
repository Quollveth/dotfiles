{
	"custom/appsmenu":{
		"format":"",
			"on-click":"$XDG_SCRIPT_HOME/launch-wofi.sh",
			"tooltip":false
	},

	"hyprland/workspaces": {
		"format":"{id}",
		"tooltip": false,
	},

	"pulseaudio":{
		"format":"󰋋",
		"on-click-right":"pavucontrol --tab 1"
	},

	"clock#time": {
		"interval":10,
		"tooltip":false,
		"format": "{:%H\n%M}",
	},
	"clock#date":{
		"interval":100,
		"format": "{:%d\n%m}",
		"tooltip-format": "<tt><small>{calendar}</small></tt>",
	},

	"custom/updates": {
		"format": "{icon}",
		"return-type": "json",
		"format-icons": {
			"has-updates": "󰚰",
			"updated": ""
		},
		"exec-if": "which waybar-module-pacman-updates",
		"exec": "waybar-module-pacman-updates  --interval-seconds 5 --network-interval-seconds 300"
	},

	"mpris":{
		"format-playing":"󰐊",
		"format-paused":"󰏤",
		"dynamic-len":50,
		"dynamic-order":["title","artist"],
		"ignored-players":["firefox"]
	},

	"custom/power":{
		"format":"",
		"tooltip":false,
	},
}
